    "watch:ts": "tsc -w"
  },
  "dependencies": {
    "@types/jquery": "^3.3.31",
    "@types/shelljs": "^0.8.6",
    "express": "^4.17.1",
    "jquery": "^3.4.1",
    "mongodb": "^3.4.1",
    "mongoose": "^5.8.7",
    "pug": "^3.0.1",
    "shelljs": "^0.8.3",
    "ts-node": "^8.4.1"
  },
  "author": "Jagrajan Bhullar <jag@jagrajan.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/mongodb": "^3.3.14",
    "@types/mongoose": "^5.5.41",
    "@types/node": "^12.0.12",
    "@types/pug": "^2.0.4",
    "concurrently": "^4.1.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.2"
  }
